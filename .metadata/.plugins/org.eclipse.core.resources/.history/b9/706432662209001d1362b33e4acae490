package com.xworkz_collectionTest_vectordemo_daodto_flight_dao;

import java.util.Enumeration;
import java.util.Iterator;
import java.util.Vector;

import com.xworkz_collectionTest_vectordemo_daodto_flight.Dto_flight;

public class Dao_flightimpl implements Dao_flight {
     Vector<Dto_flight> vector =new Vector<Dto_flight>();

	@Override
	public void addflight(Dto_flight dto) {
		vector.add(dto);
		System.out.println(" added flight is:"+dto);
		
	}

	@Override
	public String toString() {
		return "Dao_flightimpl [vector=" + vector + "]";
	}

	@Override
	public void updateflight(Dto_flight dto) {
    
		int count=0;
		Enumeration<Dto_flight>enumeration=vector.elements();
		while(enumeration.hasMoreElements());
		System.out.println(enumeration.nextElement());
		count++;
	}
	for(int i = 0; i<books.size();i++) {
		if(vector.get(i).getSource() == dto.) {
			count++;
			vector.get(i).setNoofpages(dto.getNoofpages());
			System.out.println("Updated pages is:" + books.get(i));
		}
	}
		if(count == 0) {
			System.out.println("Invalid book  Details Entered");
		}
}	
		}
		
	
	
	 
	


